#!/bin/bash

cat << _EOF_

Привет $USER, это Меню полезной информации, выбери нужное:
1. Информация о хосте
2. Информация о дисках
3. Информация об используемой памяти
0. Выход

_EOF_
read -p "Введите число: "
#Если аргумент не введен, то присваевается автоматически REPLY
if [[ "$REPLY" =~ ^[0-3]$ ]]; then
    #Проерка на введеное число
    case $REPLY in
    0)
        echo "Выхожу!"
        exit
        ;;
    1)
        echo "Hostname: $HOSTNAME"
        exit
        ;;
    2)
        df -h
        exit
        ;;
    3)
        if [[ "$(id -u)" -eq 0 ]]; then
            #Проверка от Суперпользователя идет или нет
            echo "Информация об используемой памяти Всех пользователей"
            du -sh /home/*
        else
            echo "Информация об используемой памяти $USER"
            du -sh "$HOME"
            exit
        fi
        ;;
    esac

else
    echo "Ошибка ввода, пока." >&2
    exit 1
fi
