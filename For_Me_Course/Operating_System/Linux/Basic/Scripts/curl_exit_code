#!/bin/bash

#написание мини функции
#проверяет код возврата на сервере! Внимательно!
#более улучшенная версия будет чуть позже :)

cat << _EOF_
Привет $USER! Это скрипт который проверяет работу на сервере
_EOF_

get_changelog () 
{

        cmd=$(curl -s -o /dev/null -I -w "%{http_code}" $1)
        echo "Если функция ОК, то код возрата 0, проверяем: $?"

}
get_changelog $1

if (( $cmd == 200 )); then
        echo "Код возврата на сервере: $cmd"
        curl -o <PATH> $1
        cat <PATH> | head -n 1
else
        echo "Код возврата на сервере: $cmd"
fi
